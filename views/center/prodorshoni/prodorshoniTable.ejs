<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>ক্রমিক নং</th>
        <th>অর্থ বছর</th>
        <th>প্রদর্শনীর ধরণ</th>
        <th>স্থাপণের তারিখ</th>
        <th>ফল ও জাতের নাম/সংখ্যা</th>
        <th>জমির পরিমাণ</th>
        <th>কৃষকের নাম ও ঠিকানা</th>
        <th>মোবাইল নং</th>
        <th>প্রদর্শনীর বর্তমান অবস্থা</th>
        <th>এসএএওর নাম ও মোবাইল নং</th>
        <th>পরিবর্তন/মুছুন</th>
    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row,index){ %>
            <tr>
                <td><%= index+1 %></td>
                <td><%= row.ortho %></td>
                <td><%= row.type %></td>
                <td><%= row.date %></td>
                <td><%= row.fol %></td>
                <td><%= row.jomi %></td>
                <td><%= row.farmer %></td>
                <td><%= row.mobile %></td>
                <td><%= row.present %></td>
                <td><%= row.saao %></td>
                <td><a class="btn btn-primary btn-xs" href="/edit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/delete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>ক্রমিক নং</th>
            <th>অর্থ বছর</th>
            <th>প্রদর্শনীর ধরণ</th>
            <th>স্থাপণের তারিখ</th>
            <th>ফল ও জাতের নাম/সংখ্যা</th>
            <th>জমির পরিমাণ</th>
            <th>কৃষকের নাম ও ঠিকানা</th>
            <th>মোবাইল নং</th>
            <th>প্রদর্শনীর বর্তমান অবস্থা</th>
            <th>এসএএওর নাম ও মোবাইল নং</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>