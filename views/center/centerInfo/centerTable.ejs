<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>সেন্টারের নাম</th>
        <th>কর্মকর্তার নাম</th>
        <th>পদবী</th>
        <th>মোবাইল নং</th>
        <th>ই-মেইল</th>
        <th>পরিবর্তন/মুছুন</th>

    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td><%= row.center %></td>
                <td><%= row.kormokorta %></td>
                <td><%= row.podobi %></td>
                <td><%= row.mobile %></td>
                <td><%= row.email %></td>
                <td><a class="btn btn-primary btn-xs" href="/pd/centerEdit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/pd/centerDelete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td> 
                
               
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>সেন্টারের নাম</th>
            <th>কর্মকর্তার নাম</th>
            <th>পদবী</th>
            <th>মোবাইল নং</th>
            <th>ই-মেইল</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>